FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install test dependencies
RUN pip install --no-cache-dir pytest pytest-cov pytest-asyncio pytest-timeout

# Copy application code
COPY . .

# Make initialization script executable
RUN chmod +x scripts/init_ollama.sh

# Set environment variables
ENV PYTHONPATH=/app
ENV OLLAMA_HOST=http://localhost
ENV OLLAMA_PORT=11434

# Command to run tests
CMD ["bash", "-c", "./scripts/init_ollama.sh && pytest -v --cov=src --cov-report=term-missing tests/"] 